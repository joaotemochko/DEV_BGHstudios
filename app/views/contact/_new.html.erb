<%= form_with scope: :contact, url: contact_index_path, method: :post, local: true, class: "container size-from" do |form| %>
    <div data-mdb-input-init class="form-outline mb-4">
        <%= form.label :name, "Nome: ", class: 'form-label' %>
        <%= form.text_field :name, required: true, class: "form-control" %>
    </div>
          
    <div data-mdb-input-init class="form-outline mb-4">
        <%= form.label :email, "Email: ", class: 'form-label' %>
        <%= form.email_field :email, required: true, class: "form-control" %>
    </div>
          
    <div data-mdb-input-init class="form-outline mb-4">
        <%= form.label :tel, "Celular: ", class: 'form-label' %>
        <%= form.telephone_field :tel, class: "form-control" %>
    </div>
          
    <div data-mdb-input-init class="form-outline mb-4">
        <%= form.label :message, "Mensagem: ", class: 'form-label' %>
        <%= form.text_area :message, size: "70x5", class: "form-control" %>
    </div>
        <%= form.submit "Enviar", class: "rounded-pill btn btn-home btn-light" %>
<% end %>